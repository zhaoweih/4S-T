<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".activity.HomeActivityDetailActivity">

    <com.zhaoweihao.architechturesample.ui.TitleLayout
        android:id="@+id/ahc_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhaoweihao.architechturesample.ui.NetWorkImageView
        android:id="@+id/ahc_iv_activity_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:qmui_corner_radius="0dp" />
    <TextView
        android:id="@+id/ahc_activity_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ahc_activity_duration"
        android:layout_margin="5dp"
        android:gravity="center|left"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>