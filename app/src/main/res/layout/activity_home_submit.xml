<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeActivitySubmitActivity">

    <com.zhaoweihao.architechturesample.ui.TitleLayout
        android:id="@+id/ahs_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ahs_upload_cover"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="#fff"
        android:layout_height="80dp">
        <com.zhaoweihao.architechturesample.ui.NetWorkImageView
            android:id="@+id/ahs_iv_cover"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:background="@drawable/upload_cover"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#9000"
            android:text="@string/upload_cover"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.zhaoweihao.architechturesample.ui.GetInputTextOrSelectTagDialogLayout
        android:id="@+id/ahs_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhaoweihao.architechturesample.ui.GetInputTextOrSelectTagDialogLayout
        android:id="@+id/ahs_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhaoweihao.architechturesample.ui.GetInputTextOrSelectTagDialogLayout
        android:id="@+id/ahs_tse"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.zhaoweihao.architechturesample.ui.GetInputTextOrSelectTagDialogLayout
        android:id="@+id/ahs_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.zhaoweihao.architechturesample.ui.GetInputTextOrSelectTagDialogLayout
        android:id="@+id/ahs_time2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ahs_et_add_content"
            android:textColorHint="#2000"
            android:gravity="left|top"
            android:hint="@string/add_activity_tip"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#fff"
            android:inputType="textImeMultiLine"
            />
        <ImageView
            android:id="@+id/ahs_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="5dp"
            android:src="@drawable/new_mesg"
            android:visibility="visible" />
    </FrameLayout>
    <com.zhaoweihao.architechturesample.ui.MagnifyPhotoLayout
        android:id="@+id/ahs_maginfyPhotoLayout"
        android:layout_marginTop="-560dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>