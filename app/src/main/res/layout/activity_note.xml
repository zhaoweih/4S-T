<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.NoteActivity">
    <com.zhaoweihao.architechturesample.ui.TitleLayout
        android:id="@+id/an_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.zhaoweihao.architechturesample.ui.SearchBoardLayout
        android:id="@+id/an_search_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/an_fl_draft"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:src="@drawable/draft" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="60dp"
            android:background="#B3FFFFFF"
            android:gravity="center"
            android:text="@string/draft"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/an_tv_draft"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#5000"
            android:textSize="16sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:src="@drawable/userarrowright" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/an_fl_share_note"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:src="@drawable/share_note" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="60dp"
            android:background="#B3FFFFFF"
            android:gravity="center"
            android:text="@string/share_note"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/an_tv_share"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#5000"
            android:textSize="16sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:src="@drawable/userarrowright" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/an_fl_private_note"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:src="@drawable/private_note" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="60dp"
            android:background="#B3FFFFFF"
            android:gravity="center"
            android:text="@string/private_note"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/an_tv_private"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#5000"
            android:textSize="16sp"
            android:layout_gravity="right|center"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:src="@drawable/userarrowright" />
    </FrameLayout>
</LinearLayout>