<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lal_ly_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <com.zhaoweihao.architechturesample.ui.NetWorkImageView
            android:id="@+id/lal_iv_course_icon"
            app:qmui_border_color="#fff"
            app:qmui_corner_radius="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/logo" />
        <LinearLayout
            android:id="@+id/lal_ll_title"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lal_tv_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/lal_iv_collect"
            app:qmui_borderColor="@color/colorBlue"
            app:qmui_borderWidth="1dp"
            app:qmui_isRadiusAdjustBounds="true"
            app:qmui_radius="5dp"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:text="@string/collect"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-1dp"
        android:background="#1000" />
</LinearLayout>