<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_ll_whole_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="#fff"

    android:orientation="vertical">
    <ImageView
        android:id="@+id/ln_iv_selector"
        android:layout_gravity="right"
        android:layout_width="35dp"
        android:visibility="gone"
        android:layout_marginBottom="-10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="0dp"
        android:layout_height="35dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <com.zhaoweihao.architechturesample.ui.NetWorkImageView
                android:id="@+id/ln_iv_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center"
                app:qmui_border_color="#0000"
                app:qmui_corner_radius="5dp"
                />

            <TextView
                android:id="@+id/ln_title"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#269"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ln_author"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-80dp"
                android:layout_marginTop="25dp"
                android:gravity="center|left"
                android:textColor="#5000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ln_date"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="25dp"
                android:gravity="center|left"

                android:textColor="#5000"
                android:textSize="12sp" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/ln_iv_type"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="10sp"
                app:qmui_borderColor="#269"
                android:textColor="#269"
                app:qmui_borderWidth="1dp"
                app:qmui_isRadiusAdjustBounds="true"
                app:qmui_radius="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ln_contentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ln_content"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:textColor="#9000"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_ll_im1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ln_iv_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ln_iv_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ln_iv_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_ll_im2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ln_iv_4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ln_iv_5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ln_iv_6"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <FrameLayout

                android:id="@+id/ln_fl_share_note"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:layout_weight="2.5">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sharenote" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="@string/share"
                    android:textSize="15sp" />
            </FrameLayout>
            <FrameLayout

                android:id="@+id/ln_fl_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/mesg" />

                <TextView
                    android:id="@+id/ln_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:textSize="18sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ln_fl_likes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ln_iv_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/likes" />

                <TextView
                    android:id="@+id/ln_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textSize="18sp" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#1000" />
</LinearLayout>